  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=8192' NEXT_CPU_COUNT=$(nproc) bun --bun next build",
    "deploy": "cd ./.cicd && bunx pulumi up",
    "dev": "bun --bun next dev",
    "dev:docker": "docker build -f ./.cicd/Dockerfile-local -t sai-transcription-demo-local . && docker run -p 3000:3000 sai-transcription-demo-local",
    "docker:build": "docker build -f ./.cicd/Dockerfile -t sai-transcription-demo .",
    "docker:start": "docker run -p 3000:3000 sai-transcription-demo",
    "ec2:get-password": "cd ./.cicd && bunx pulumi stack output --json --show-secrets | jq \".consolePassword\"",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.5.0",
    "lucide-react": "^0.483.0",
    "next": "^15.2.3",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.5",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "babel-plugin-react-compiler": "^19.0.0-beta-bafa41b-20250307",
    "bun": "^1.2.5",
    "eslint": "9.22.0",
    "eslint-config-next": "15.2.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.1",
    "tailwindcss-motion": "^1.0.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "bun": ">=1.2.4"
  }
